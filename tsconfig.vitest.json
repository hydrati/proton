{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "types": [
      "vitest/globals"
    ]
  },
  "include": ["src/**/*.spec.ts", "src/**/*.spec.ts", "src/**/*.spec.tsx"],
  "exclude": ["node_modules", "dist"]
}